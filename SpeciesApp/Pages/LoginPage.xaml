<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleLoginApp.Pages.LoginPage"
             Title="Login">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Login" FontSize="Large" HorizontalOptions="Center" />

        <Entry x:Name="usernameEntry" Placeholder="Username" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginButtonClicked" />

        <!-- Label para mostrar el token -->
        <Label x:Name="tokenLabel" Text="Token will be shown here..." FontSize="Medium" TextColor="Green" />

    </StackLayout>
</ContentPage>
